<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->

        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">#000000</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="textcolor">@color/white</item>
        <item name="tintcolor">@color/black</item>
        <item name="bottoncolor">@color/black</item>
        <item name="textcolorblack">@color/black</item>
        <item name="layout_log">@color/white</item>


    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>

        <!-- Required for animated icons -->

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">50%</item>
        <item name="windowMinWidthMinor">50%</item>
    </style>
    <!--Progress dialog theme for lollipop or above-->
    <style name="ProgressTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>


    <style name="AlertDialog.Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">#000000</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="textcolor">@color/white</item>
        <item name="tintcolor">@color/black</item>
        <item name="bottoncolor">@color/black</item>
        <item name="textcolorblack">@color/black</item>
        <item name="layout_log">@color/white</item>
       </style>

    <style name="SwitchCompatTheme">

        <item name="colorControlActivated">@color/blue</item>
    </style>


    <style name="fontBold">
        <item name="fontFamily">@font/rbold</item>
    </style>
    <style name="fontMedium">
        <item name="fontFamily">@font/rmedium</item>
    </style>
    <style name="fontRagular">
        <item name="fontFamily">@font/rragular</item>
    </style>

    <dimen name="dp400">400dp</dimen>
    <dimen name="dp600">600dp</dimen>
</resources>

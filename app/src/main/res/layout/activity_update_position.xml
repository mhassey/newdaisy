<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250"
            android:background="@color/updatePosition"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_arrow_back" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp120"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_location_icon" />

            <TextView
                style="@style/fontMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/update_position"
                android:textColor="@color/white"
                android:textSize="@dimen/sp25" />


        </RelativeLayout>


        <TextView
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/sp15"
            android:text="@string/isle"
            android:fontFamily="@font/rragular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/isle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/editTextColor"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp15"
            android:inputType="number"
            android:textSize="@dimen/dp14"
            android:background="@drawable/edit_text_format"
            android:hint="@string/isle"
            android:textColorHint="@color/editTextLineColor"
            android:padding="@dimen/dp10" />
        <TextView
            android:layout_marginStart="@dimen/dp20"
            android:text="@string/shelf"
            android:fontFamily="@font/rragular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText

            android:id="@+id/shelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/editTextColor"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp15"            android:inputType="number"
            android:textSize="@dimen/dp14"
            android:background="@drawable/edit_text_format"
            android:hint="@string/shelf"
            android:textColorHint="@color/editTextLineColor"
            android:padding="@dimen/dp10" />
        <TextView
            android:layout_marginStart="@dimen/dp20"
            android:text="@string/position"
            android:fontFamily="@font/rragular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText

            android:id="@+id/position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/editTextColor"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp15"            android:inputType="number"
            android:textSize="@dimen/dp14"
            android:background="@drawable/edit_text_format"
            android:hint="@string/position"
            android:textColorHint="@color/editTextLineColor"
            android:padding="@dimen/dp10" />


        <LinearLayout
            android:gravity="bottom|end"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:layout_marginTop="@dimen/dp15"
            android:layout_width="@dimen/dp150"
            android:id="@+id/updatePosition"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:background="@drawable/ovel_update_position"
            android:text="@string/next"
            android:textSize="@dimen/sp25"
            android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>
</layout>
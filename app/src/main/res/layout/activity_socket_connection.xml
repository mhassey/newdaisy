<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainDaisy.activity.socketConnection.SocketConnection">

        <Button
            android:id="@+id/become_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/become_admin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar

            android:id="@+id/sync_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            app:layout_constraintEnd_toEndOf="@+id/become_admin"
            app:layout_constraintStart_toStartOf="@+id/become_admin"
            app:layout_constraintTop_toBottomOf="@+id/become_admin" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
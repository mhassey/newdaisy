<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/upperLayout"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/helloWorldCameraPreview"
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp10" />

        <LinearLayout
            android:id="@+id/webViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/supportWebViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone">

            <WebView
                android:id="@+id/supportWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:orientation="horizontal">




            <LinearLayout

                android:id="@+id/offlineLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/offLineIcon"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:src="@drawable/offline"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/sanitisedHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/senaitised"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background" />


        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="#99000000"
            android:id="@+id/password_linear_layout"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/password_layout" android:id="@+id/password_layout"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>

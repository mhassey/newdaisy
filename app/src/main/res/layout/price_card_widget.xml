<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:background="@drawable/rouned_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginStart="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/pvf_one"
            android:textSize="@dimen/sp18"
            android:fontFamily="@font/sambold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            android:fontFamily="@font/sambold"
            android:layout_marginStart="@dimen/dp5"
            android:text="SRP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp100">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|start"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:id="@+id/pvf_two"
                android:layout_marginStart="@dimen/dp20"
                android:fontFamily="@font/sambold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/change_data"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:fontFamily="@font/sammed"

                android:gravity="center|start"
                android:textSize="@dimen/sp12"
                android:text="@string/when_you_switch_to_boost_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/gray"
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|start"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:id="@+id/pvf_three"
                android:layout_marginStart="@dimen/dp20"
                android:fontFamily="@font/sambold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:fontFamily="@font/sammed"
                android:gravity="center|start"
                android:text="+ New Line"
                android:textSize="@dimen/sp12" />
             <TextView
            android:layout_marginStart="@dimen/dp20"
            android:fontFamily="@font/sammed"
            android:gravity="center|start"
            android:textSize="@dimen/sp12"
            android:text="Qualified Upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp70">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|start"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:id="@+id/pvf_four"
                android:layout_marginStart="@dimen/dp20"
                android:fontFamily="@font/sambold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:fontFamily="@font/sammed"
                android:gravity="center|start"
                android:textSize="@dimen/sp12"
                android:text="+ 15 25 Plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/gray"
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/open_app"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:textSize="@dimen/sp16"
                android:id="@+id/open_mpc"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:gravity="center"
                android:padding="@dimen/dp8"
                android:textColor="@color/white"
                android:background="@drawable/rounded_with_black_fill"
                android:text="@string/learn_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rootLayout"
        android:weightSum="1"
        tools:context=".activity.onBoarding.slider.slides.permissionAsk.PermissionAsk">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="0.2"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp50"
                android:src="@drawable/mainlogolargewidth" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="0.6"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp18"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_height="wrap_content">
            <TextView
                android:text="@string/enter_base_url_for_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <AutoCompleteTextView
                android:id="@+id/baseUrl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:background="@drawable/edit_text_format"
                android:hint="@string/enter_base_url_for_server"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="@dimen/dp10"
                android:textColor="?attr/textcolorblack"
                android:textSize="@dimen/sp15" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="0.2"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/nextSlide"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">

                <TextView
                    style="@style/fontRagular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/next"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp20" />

                <TextView
                    style="@style/fontRagular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:text=">"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
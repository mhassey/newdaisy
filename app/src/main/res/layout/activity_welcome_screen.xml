<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".activity.welcomeScreen.WelcomeScreen">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250"
            android:background="@color/purple"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp120"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_welcome_icon" />

            <TextView
                style="@style/fontMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/welcome"
                android:textColor="@color/white"
                android:textSize="@dimen/sp25" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center|top"
            android:orientation="vertical">


            <TextView
                style="@style/fontMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp25"
                android:gravity="center|left"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/please_enter_your_mpc_key_in_the_box"
                android:textSize="@dimen/dp15" />


            <EditText
                android:id="@+id/key_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp25"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp25"
                android:background="@drawable/edit_text_format"
                android:gravity="center"
                android:hint="@string/mpc_key"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/dp10"
                android:singleLine="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="bottom|end">

            <LinearLayout
                android:id="@+id/curve_layout"
                android:layout_width="@dimen/dp180"
                android:layout_height="@dimen/dp50"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/ovel_purple"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/begin"
                    style="@style/fontRagular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

                <TextView
                    style="@style/fontRagular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:text=">"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
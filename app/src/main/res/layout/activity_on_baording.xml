<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tabDots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/tabDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp30"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:clickable="false"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabDotsLayout"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabIndicatorHeight="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/nextSlide"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/fontRagular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/next"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp20" />

                    <TextView
                        style="@style/fontRagular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:text=">"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/saveAndStartMpcHeader"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp55"
                android:gravity="center"
                android:orientation="horizontal"
               >


                <TextView
                    android:textColor="?attr/textcolorblack"
                    android:textSize="@dimen/sp20"
                    android:padding="@dimen/dp10"
                    android:id="@+id/saveAndStartMpc"
                    android:text="@string/save_and_start_mpc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_margin="@dimen/dp10"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp35"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp55"
            android:visibility="gone">

            <Spinner

                android:id="@+id/webkitOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_format"
                android:inputType="text"
                android:padding="@dimen/dp10"
                android:textColorHint="@color/editTextLineColor" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp35"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp55"
            android:visibility="gone">

            <Spinner

                android:id="@+id/carrierName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_format"
                android:inputType="text"

                android:padding="@dimen/dp10"
                android:textColorHint="@color/editTextLineColor" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/fontBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:text="@string/select_product"
                android:textColor="@color/black"
                android:textSize="@dimen/sp25" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp30"
                    android:layout_height="wrap_content">

                    <Spinner

                        android:id="@+id/manufactureList"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@drawable/edit_text_format"
                        android:inputType="text"

                        android:padding="@dimen/dp10"
                        android:textColorHint="@color/editTextLineColor" />

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:src="@drawable/ic_down_arrow" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginEnd="@dimen/dp30"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >

                    <Spinner

                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@drawable/edit_text_format"
                        android:inputType="text"
                        android:padding="@dimen/dp10"
                        android:textColorHint="@color/editTextLineColor" />

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:src="@drawable/ic_down_arrow" />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/saveAndLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp30"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp30"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/dark_blue"
                android:text="@string/load"

                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</layout>
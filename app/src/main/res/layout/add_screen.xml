<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".activity.welcomeScreen.WelcomeScreen">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp60"
            android:layout_marginEnd="@dimen/dp60"
            android:layout_marginBottom="@dimen/dp80"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_product"
                android:textColor="@color/dark_grey_blue"
                android:textSize="@dimen/dp25" />

            <TextView
                android:id="@+id/product_inner_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp6"
                android:text="@string/if_your_product_selected_is_not"
                android:textColor="@color/dark_grey_blue"
                android:textSize="@dimen/dp14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp14"

                android:visibility="gone">

                <Spinner

                    android:id="@+id/carrierName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_format"
                    android:backgroundTint="@color/mettle_light_green"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="@dimen/dp10"
                    android:textColorHint="@color/editTextLineColor"
                    android:textDirection="locale" />

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp10"
                    android:src="@drawable/ic_down_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp11">

                <Spinner
                    android:id="@+id/manufactureList"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/edit_text_format"
                    android:backgroundTint="@color/mettle_light_green"
                    android:inputType="text"

                    android:textColorHint="@color/editTextLineColor"
                    android:textDirection="locale" />

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/ic_down_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp11">

                <Spinner
                    android:id="@+id/productName"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/edit_text_format"
                    android:backgroundTint="@color/mettle_light_green"
                    android:inputType="text"

                    android:textColorHint="@color/editTextLineColor"
                    android:textDirection="locale" />

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/ic_down_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp11">

                <Spinner
                    android:id="@+id/webkitOrientation"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/edit_text_format"
                    android:backgroundTint="@color/mettle_light_green"
                    android:inputType="text"

                    android:textColorHint="@color/editTextLineColor"
                    android:textDirection="locale" />

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/ic_down_arrow" />

            </RelativeLayout>

            <TextView

                android:id="@+id/begin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp13"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/mettle_light_green"
                android:gravity="center"
                android:text="@string/go"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>
</layout>
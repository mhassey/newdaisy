<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginStart="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <TextView
        android:layout_marginStart="@dimen/dp5"
         android:textSize="@dimen/sp15"
        android:fontFamily="@font/rbold"
        android:textColor="@color/black"
        android:text="@string/add_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>




    <View
        android:background="@color/gray"
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>



        <EditText
            android:visibility="gone"
            android:id="@+id/isle"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/editTextColor"
            android:layout_margin="@dimen/dp15"
            android:inputType="number"
            android:textSize="@dimen/dp14"
            android:background="@drawable/edit_text_format"
            android:hint="@string/isle"
            android:textColorHint="@color/editTextLineColor"
            android:padding="@dimen/dp10" />
    <EditText
        android:visibility="gone"
        android:id="@+id/shelf"
        android:text="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/editTextColor"
        android:layout_margin="@dimen/dp15"
        android:inputType="number"
        android:textSize="@dimen/dp14"
        android:background="@drawable/edit_text_format"
        android:hint="@string/shelf"
        android:textColorHint="@color/editTextLineColor"
        android:padding="@dimen/dp10" />
    <EditText
        android:visibility="gone"
        android:text="1"
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/editTextColor"
        android:layout_margin="@dimen/dp15"
        android:inputType="number"
        android:textSize="@dimen/dp14"
        android:background="@drawable/edit_text_format"
        android:hint="Position"
        android:textColorHint="@color/editTextLineColor"
        android:padding="@dimen/dp10" />


    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:textColor="@color/black"
        android:text="@string/carrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:layout_height="wrap_content">
        <Spinner

            android:id="@+id/carrierName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/editTextColor"
            android:inputType="text"
            android:textSize="@dimen/dp14"
            android:background="@drawable/edit_text_format"

            android:textColorHint="@color/editTextLineColor"
            android:padding="@dimen/dp10" />

        <ImageView
            android:layout_marginEnd="@dimen/dp10"
            android:src="@drawable/ic_dropdown"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:textColor="@color/black"
        android:text="@string/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:layout_height="wrap_content">
    <Spinner

        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/editTextColor"
        android:inputType="text"
        android:textSize="@dimen/dp14"
        android:background="@drawable/edit_text_format"
        android:hint="https://baseURL"
        android:textColorHint="@color/editTextLineColor"
        android:padding="@dimen/dp10" />

        <ImageView
            android:layout_marginEnd="@dimen/dp10"
            android:src="@drawable/ic_dropdown"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>




</LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp50"
            android:fontFamily="@font/rbold"
            android:text="@string/befor_you_begin"
            android:textColor="@color/black"
            android:textSize="@dimen/dp18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/curve_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp50"
            android:layout_marginBottom="@dimen/dp50"
            android:background="@drawable/ovel_purple"

            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp20"
            android:paddingEnd="@dimen/dp20"
            android:text="@string/take_me_their"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView

                android:id="@+id/begin"
                style="@style/fontRagular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/take_me_their"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />

            <TextView
                style="@style/fontRagular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:text=">"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            android:fontFamily="@font/rmedium"
            android:gravity="center"
            android:text="@string/please_verify_the_time"
            app:layout_constraintBottom_toTopOf="@+id/curve_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

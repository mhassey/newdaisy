<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".activity.onBoarding.slider.slides.permissionAsk.PermissionAsk">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="0.2"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp50"
                android:src="@drawable/mainlogolargewidth" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center|top"
            android:orientation="vertical">


            <EditText
                android:id="@+id/storeCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/edit_text_format"
                android:hint="@string/store_code"
                android:textSize="@dimen/sp15"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:paddingStart="@dimen/dp10"
                android:textColor="?attr/textcolorblack" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp20"
                android:background="@drawable/edit_text_format"
                android:hint="@string/Password"
                android:textSize="@dimen/sp15"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:paddingStart="@dimen/dp10"
                android:textColor="?attr/textcolorblack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center">

            <TextView
                android:id="@+id/singup"
                android:layout_width="@dimen/dp200"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_format"
                android:gravity="center"
                android:paddingStart="@dimen/dp30"
                android:paddingTop="@dimen/dp20"
                android:paddingEnd="@dimen/dp30"
                android:paddingBottom="@dimen/dp20"
                android:text="@string/signin"
                android:textColor="?attr/textcolorblack"
                android:textSize="@dimen/sp15" />

        </LinearLayout>

    </LinearLayout>
</layout>
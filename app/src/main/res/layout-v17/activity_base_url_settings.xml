<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rootLayout"
        android:weightSum="1"
        tools:context=".activity.onBoarding.slider.slides.permissionAsk.PermissionAsk">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="0.2"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp50"
                android:src="@drawable/mainlogolargewidth" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="0.6"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp18"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_height="wrap_content">
            <TextView
                android:text="@string/enter_base_url_for_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp35"
                android:layout_marginEnd="@dimen/dp55"
                android:layout_marginTop="@dimen/dp5"
                android:layout_height="wrap_content">
                <Spinner

                    android:id="@+id/baseUrl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:inputType="text"
                    android:textDirection="locale"
                    android:autofillHints="@string/enter_base_url_for_server"
                    android:background="@drawable/edit_text_format"
                    android:paddingStart="@dimen/dp10"
                    android:textColor="?attr/textcolorblack"
                    android:textColorHint="@color/editTextLineColor"
                    android:padding="@dimen/dp10" />

                <ImageView
                    android:layout_marginEnd="@dimen/dp10"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"/>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="0.2"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/nextSlide"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">

                <TextView
                    style="@style/fontRagular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/next"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp20" />

                <TextView
                    style="@style/fontRagular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"

                    android:text=">"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />

    <application
        android:name="com.daisy.app.AppController"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_motoicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ic_motoicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.daisy.activity.socketConnection.SocketConnection"
            android:exported="false" />
        <service
            android:name="com.daisy.service.DeviceSearch"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.daisy.activity.langSupport.LangSelectionActivity" />
        <activity android:name="com.daisy.activity.updateProduct.UpdateProduct" />

        <service
            android:name="com.daisy.service.SecurityService"
            android:enabled="true"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.daisy.activity.feedBack.FeedBackActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>


        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.daisy.activity.baseUrl.BaseUrlSettings"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.daisy.activity.refreshTimer.RefreshTimer"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.configSettings.ConfigSettings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.updateBaseUrl.UpdateBaseUrl"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.updatePosition.UpdatePosition"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.onBoarding.slider.OnBoarding"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.welcomeScreen.WelcomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.splash.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.daisy.activity.lockscreen.LockScreen"
            android:screenOrientation="portrait" />

        <service
            android:name="com.daisy.service.DeletePhotoService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.daisy.service.StickyService"
            android:stopWithTask="false" />

        <activity
            android:name="com.daisy.activity.settings.Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.logs.logs_show.LogsShowActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.daisy.activity.logs.LogsMainActivity" />
        <activity
            android:name="com.daisy.activity.editorTool.EditorTool"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daisy.activity.mainActivity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensorPortrait"
            android:showOnLockScreen="true" />

        <receiver android:name="com.daisy.broadcast.broadcastforbackgroundservice.AlarmReceiverForBackground" />
        <receiver
            android:name="com.daisy.broadcast.broadcastforbackgroundservice.AlarmBootBackgroundReceiver"
            android:enabled="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.daisy.broadcast.bootcomplete.BootReceiver"
            android:enabled="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.daisy.service.BackgroundService"
            android:stopWithTask="false" />
        <service
            android:name="com.daisy.service.BackgroundSoundService"
            android:stopWithTask="false" />
        <service
            android:name="com.daisy.service.LogGenerateService"
            android:stopWithTask="false" />

        <receiver
            android:name="com.daisy.security.Admin"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.ACTION_PASSWORD_CHANGED" />
                <action android:name="android.app.action.ACTION_PASSWORD_EXPIRING" />
                <action android:name="android.app.action.ACTION_PASSWORD_FAILED" />
                <action android:name="android.app.action.ACTION_PASSWORD_SUCCEEDED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.daisy.service.FirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>